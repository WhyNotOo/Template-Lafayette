{
  "name": "Dashboard Icons",
  "version": "1.0",
  "fullName": "Dashboard icons",
  "description": "Add custom description",
  "keywords": [
    "icons",
    "brands",
    "shopping"
  ],
  "author": {
    "name": "Joshfire"
  },
  "joshfire": {
    "images": {
      "small": "marketing/logo_small.jpg",
      "big": "marketing/logo_big.jpg"
    },
    "premium": false,
    "devices": [
      {
        "devices": [
          "phone",
          "tablet"
        ],
        "startfile": "app/index.html",
        "orientation": "auto",
        "images": "marketing/index.png",
        "screenshots": [
          "marketing/index.png"
        ],
        "disablePreview": true
      }
    ],
    "datasources": {
      "brands": {
        "title": "Icons",
        "description": "QTI or spreadsheet. See template description for details.",
        "multiple": false,
        "inputTypeRequired": true
      }
    },
    "options": {
      "schema": {
        "backgroundimage": {
          "type": "string",
          "title": "Your custom background image",
          "description": "Choose a custom background image for your application"
        },
        "backgroundheader": {
          "type": "string",
          "title": "Your custom color for the header",
          "description": "Choose a custom color for the header (according to your brand logo)",
          "format": "color",
          "default": "#FFFFFF"
        }
      },
      "form": [
        "datasources.brands",
        { "key": "backgroundimage" },
        { "key": "backgroundheader" },
        {
          "name": "iconstyle",
          "type": "selectfieldset",
          "title": "Style of icons",
          "description": "Select a style for icons on the Dashboard",
          "items": [
            {
              "type": "optionfieldset",
              "value": "basic",
              "legend": "Basic"
            },
            {
              "type": "optionfieldset",
              "value": "inbox",
              "legend": "Inbox"
            },
            {
              "type": "optionfieldset",
              "value": "inboxRounded",
              "legend": "Inbox rounded"
            },
            {
              "type": "optionfieldset",
              "value": "circle",
              "legend": "Circle"
            }
          ]
        }
      ]
    },
    "libraries": [
      {
        "name": "jQuery",
        "homepage": "http://jquery.com",
        "description": "jQuery is a fast and concise JavaScript Library that simplifies HTML document traversing, event handling, animating, and Ajax interactions for rapid web development.",
        "repositories": [
          {
            "type": "git",
            "url": "https://github.com/jquery/jquery.git"
          }
        ],
        "licenses": [
          {
            "type": "MIT",
            "url": "license-jquery.txt"
          }
        ]
      }
    ]
  }
}
