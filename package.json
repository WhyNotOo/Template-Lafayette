{
  "name": "lafayette",
  "version": "1.0",
  "fullName": "Display Lafayette brands",
  "description": "Add custom description",
  "keywords": [
    "lafayette",
    "brands",
    "shopping"
  ],
  "author": {
    "name": "Joshfire"
  },
  "joshfire": {
    "images": {
      "small": "marketing/logo-small.jpg",
      "big": "marketing/logo-big.jpg"
    },
    "premium": false,
    "devices": [
      {
        "devices": [
          "phone",
          "tablet"
        ],
        "startfile": "app/index.html",
        "orientation": "auto",
        "images": "marketing/index.png",
        "screenshots": [
          "marketing/index.png"
        ],
        "disablePreview": true
      }
    ],
    "datasources": {
      "brands": {
        "title": "Brands",
        "description": "QTI or spreadsheet. See template description for details.",
        "multiple": false,
        "inputTypeRequired": true
      }
    },
    "options": {
      "schema": {
        "abouthtml": {
          "type": "string",
          "title": "About page",
          "description": "Text that will appear in the About page. You may use HTML markup."
        }
      },
      "form": [
        "datasources.brands"
        {
          "key": "abouthtml",
          "type": "textarea"
        }
      ]
    },
    "libraries": [
      {
        "name": "jQuery",
        "homepage": "http://jquery.com",
        "description": "jQuery is a fast and concise JavaScript Library that simplifies HTML document traversing, event handling, animating, and Ajax interactions for rapid web development.",
        "repositories": [
          {
            "type": "git",
            "url": "https://github.com/jquery/jquery.git"
          }
        ],
        "licenses": [
          {
            "type": "MIT",
            "url": "license-jquery.txt"
          }
        ]
      }
    ]
  }
}
